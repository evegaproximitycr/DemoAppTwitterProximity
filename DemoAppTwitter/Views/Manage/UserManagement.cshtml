@using System.Collections.Generic
@using System.Collections.ObjectModel
@using System.Threading
@using DemoAppTwitter.Models

@model IList<UserViewModel>
<h2></h2>

<div class="top-buffer"></div>
<div class="panel panel-primary">
    <div class="panel-heading panel-head">User Management</div>
    <div class="panel-body">
        <div class="btn-group">
            @Html.ActionLink("Add User", "AddUser")
            

        </div>
        <div class="top-buffer"></div>
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Email</td>
                        <td>
                                @using (Html.BeginForm("DeleteUser", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))                           
                                            {
                                @Html.AntiForgeryToken()
                                <div>
                                    @Html.Hidden("id", item.Id)
                                    <input type="submit" class="btn btn-default" value="Delete" title="Delete User" />
                                </div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
